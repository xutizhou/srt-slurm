# SRT SLURM Configuration
# Copy this to srtslurm.yaml and fill in your values

cluster:
  # SLURM cluster settings - these are defaults that can be overridden via CLI
  account: "restricted"
  partition: "batch"
  network_interface: "enP6p9s0np0"
  time_limit: "4:00:00"
  container_image: ""  # Optional default container image

cloud:
  # S3-compatible cloud storage for syncing benchmark results (optional)
  endpoint_url: ""     # e.g., "https://s3.us-west-2.amazonaws.com"
  bucket: ""           # e.g., "my-benchmark-results"
  prefix: "benchmark-results/"

  # Optional: Credentials can be set here or via environment variables
  # Since srtslurm.yaml is gitignored, it's safe to put credentials here
  aws_access_key_id: ""     # Or use env var: AWS_ACCESS_KEY_ID
  aws_secret_access_key: "" # Or use env var: AWS_SECRET_ACCESS_KEY
  
  # If both are empty, boto3 will check:
  # 1. Environment variables (AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY)
  # 2. AWS credentials file (~/.aws/credentials)
  # 3. IAM role (if running on EC2/ECS)
